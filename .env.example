# ============================================================================
# THE INSIGHTER ENTERPRISE - Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env file with real credentials to version control
# ============================================================================

# ============================================================================
# APPLICATION
# ============================================================================
ENVIRONMENT=development
PROJECT_NAME=The Insighter Enterprise

# ============================================================================
# BACKEND SECURITY
# ============================================================================
# Generate a strong SECRET_KEY for production:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars

# JWT Configuration
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================================================
# DATABASE & SUPABASE
# ============================================================================
# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key

# Database Connection (if using traditional database)
DATABASE_URL=postgresql://user:password@localhost:5432/insighter_db

# ============================================================================
# FRONTEND
# ============================================================================
# API Base URL - used by frontend to communicate with backend
NEXT_PUBLIC_API_URL=http://localhost:8000

# Supabase Client Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# ============================================================================
# STORAGE
# ============================================================================
# Supabase Storage Configuration (S3 Compatible)
# We use the Supabase Client SDK for most operations, but if S3 compatibility
# is required (e.g. for MLflow or other tools), use these credentials.
# Get these from Supabase Dashboard -> Project Settings -> Storage -> S3 Access Keys
STORAGE_TYPE=supabase
STORAGE_BUCKET=insighter-datasets
AWS_ACCESS_KEY_ID=your-supabase-s3-access-key
AWS_SECRET_ACCESS_KEY=your-supabase-s3-secret-key
AWS_REGION=ap-southeast-1
AWS_ENDPOINT_URL=https://your-project.supabase.co/storage/v1/s3

# ============================================================================
# THIRD-PARTY SERVICES
# ============================================================================
# MLflow Server
MLFLOW_TRACKING_URI=http://localhost:5000

# Jupyter Configuration
JUPYTER_HOST=localhost
JUPYTER_PORT=8888
JUPYTER_TOKEN=your-jupyter-token

# ============================================================================
# CORS & SECURITY
# ============================================================================
# Comma-separated list of allowed origins
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================================================
# DEVELOPMENT ONLY
# ============================================================================
# Default credentials for demo purposes - CHANGE IN PRODUCTION
DEMO_USER_PASSWORD=demo123
ADMIN_PASSWORD=admin123

# ============================================================================
# DEFAULT CREDENTIALS FOR AUTHENTICATION
# ============================================================================
# Demo User Account
DEMO_USERNAME=demo
DEMO_USER_EMAIL=demo@insighter.ai

# Admin Account
ADMIN_USERNAME=admin
ADMIN_USER_EMAIL=admin@insighter.ai
